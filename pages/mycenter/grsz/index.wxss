
.item-tx-group{
	padding:46rpx 56rpx 0;height:145rpx;
}
.item-tx-group text{
	float:left;font-size:46rpx;color:#333;line-height:135rpx;
}
.item-tx-group image{
	float:left;width:135rpx;height:135rpx;border-radius:50%;overflow:hidden;
	margin-right:27rpx;border:5rpx solid #fff;
	box-shadow:0 0 5px rgba(0,0,0,0.5);
}
.item-group{
	height:70rpx;padding:27rpx 86rpx 27rpx 37rpx;margin:30rpx 46rpx;
	background:#fff;border-radius:18rpx;position:relative;
}
.item-group::after{
	content:"";display:block;position:absolute;
	width:18rpx;height:33rpx;right:34rpx;top:50%;margin-top:-16rpx;
	background:url(data:image/png;base64,) no-repeat;
	background-size:18rpx 33rpx;
}
.item-group .tit{
	float:left;font-size:30rpx;line-height:70rpx;
}
.item-group .info{
	float:right;font-size:30rpx;color:#666;line-height:70rpx;height:70rpx;overflow:hidden;
	width:336rpx;text-align:right;
}

.edit-mobile-box{
	position:fixed;left:0;top:0;width:100%;height:100%;background:rgba(0,0,0,0.3);
}
.edit-mobile-box .con{
	position:absolute;left:0;bottom:0;background:#fff;width:100%;height:600rpx;
}
.edit-mobile-box .con::before{
	content:attr(data-before);display:block;height:80rpx;line-height:80rpx;font-size:32rpx;color:#999;text-indent:32rpx;
}

.edit-mobile-box .con .input-box,
.edit-mobile-box .con .btn-bar{
	min-height:72rpx;overflow:hidden;
	padding:18rpx 32rpx 0;
}

.edit-mobile-box .con .input-box input{
	box-sizing:border-box;float:left;width:100%;height:70rpx;line-height:70rpx;border:1px solid #ddd;border-radius:4px;background:#fbfbfb;
	padding:0 10rpx;font-size:26rpx;color:#666;
}
.edit-mobile-box .con .btn-bar .cancel-btn{
	float:right;width:40%;height:80rpx;line-height:80rpx;background:#ddd;border-radius:6px;color:#fff;
	font-size:32rpx;text-align:center;
}
.edit-mobile-box .con .save-btn{
	float:left;width:50%;height:80rpx;line-height:80rpx;background:#50be84;border-radius:6px;color:#fff;
	font-size:32rpx;text-align:center;
}







